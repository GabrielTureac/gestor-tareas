{% extends 'base.html.twig' %}

{% block title %}Agregar Nueva Tarea{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="text-center mb-4">Agregar Nueva Tarea</h1>

            {{ form_start(form) }}
                <div class="form-group">
                    <label for="{{ form.tarea.vars.id }}" class="font-weight-bold">Tarea</label>
                    {{ form_widget(form.tarea, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    <label for="{{ form.prioridad.vars.id }}" class="font-weight-bold">Prioridad</label>
                    {{ form_widget(form.prioridad, {'attr': {'class': 'form-control'}}) }}
                </div><br>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
